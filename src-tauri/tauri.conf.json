{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CMD+K",
  "version": "0.1.0",
  "identifier": "com.lakshmanturlapati.cmd-k",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "CMD+K",
        "width": 320,
        "height": 100,
        "minWidth": 320,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": false,
        "skipTaskbar": true,
        "visible": false,
        "center": true,
        "resizable": false,
        "focus": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["../K.png", "../K-white.png"],
    "macOS": {
      "entitlements": "entitlements.plist",
      "signingIdentity": "-"
    }
  }
}
